@import "tailwindcss";

@layer base {
  html {
    scroll-behavior: smooth;
  }

  body {
    font-feature-settings: 'rlig' 1, 'calt' 1;
  }
}

@layer components {
  .prose {
    @apply text-gray-900;
  }

  .prose h1 {
    @apply text-3xl font-bold mb-6 mt-8 text-gray-900;
  }

  .prose h2 {
    @apply text-2xl font-semibold mb-4 mt-6 text-gray-900;
  }

  .prose h3 {
    @apply text-xl font-semibold mb-3 mt-5 text-gray-900;
  }

  .prose h4 {
    @apply text-lg font-medium mb-2 mt-4 text-gray-900;
  }

  .prose p {
    @apply mb-4 leading-relaxed text-gray-700;
  }

  .prose ul {
    @apply mb-4 list-disc list-inside space-y-1 text-gray-700;
  }

  .prose ol {
    @apply mb-4 list-decimal list-inside space-y-1 text-gray-700;
  }

  .prose li {
    @apply mb-1;
  }

  .prose li > ul,
  .prose li > ol {
    @apply mt-2 ml-4;
  }

  .prose blockquote {
    @apply border-l-2 border-gray-300 pl-4 italic text-gray-600;
  }

  .prose code {
    @apply bg-gray-100 px-1.5 py-0.5 rounded text-sm font-mono text-gray-800;
  }

  .prose pre {
    @apply bg-gray-50 text-gray-800 p-4 rounded-md overflow-x-auto border border-gray-200;
  }

  .prose pre code {
    @apply bg-transparent p-0 text-inherit;
  }

  .prose a {
    @apply text-gray-800 hover:text-gray-600 underline underline-offset-2;
  }

  .prose strong {
    @apply font-semibold text-gray-900;
  }

  .prose em {
    @apply italic;
  }

  .prose hr {
    @apply border-gray-200 my-8;
  }

  .prose table {
    @apply w-full border-collapse border border-gray-200;
  }

  .prose th {
    @apply border border-gray-200 bg-gray-50 px-4 py-2 text-left font-medium text-gray-900;
  }

  .prose td {
    @apply border border-gray-200 px-4 py-2 text-gray-700;
  }

  .prose img {
    @apply rounded-lg shadow-sm;
  }

  /* 마크다운 목록 개선 */
  .prose ul ul,
  .prose ol ol,
  .prose ul ol,
  .prose ol ul {
    @apply mt-2 mb-2;
  }

  .prose ul li::marker {
    @apply text-gray-500;
  }

  .prose ol li::marker {
    @apply text-gray-500;
  }

  /* 빈 목록 항목 처리 */
  .prose li:empty {
    @apply hidden;
  }

  /* 목록 간격 조정 */
  .prose ul,
  .prose ol {
    @apply my-4;
  }

  .prose li {
    @apply my-1;
  }
}

@layer utilities {
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
}
